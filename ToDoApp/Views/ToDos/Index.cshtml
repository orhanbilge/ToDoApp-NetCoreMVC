@using ToDoApp.Models.Entity
@model List<ToDo>
@{
	ViewData["Title"] = "To-Do List";
}

<h2>Your To-Do List</h2>
<p><a class="text-dark" asp-area="" asp-controller="ToDos" asp-action="Create">Create a new To-Do item</a></p>
<table class="table table-striped table-responsive">
	<thead>
		<tr>
			<td>ID</td>
			<td>Description</td>
			<td>Create Date</td>
			<td></td>
			<td></td>
		</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Description</td>
			<td>@item.CreateDate.ToString("dd/MM/yyyy H:dd")</td>
			<td><a asp-controller="ToDos" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
			<td><a asp-controller="ToDos" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
		</tr>
	}
	</tbody>
</table>